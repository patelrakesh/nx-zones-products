{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": ["jest", "node"],
    "paths": {
      "@examples/*": ["apps/examples/*"],
      "@verizon-nextgen/shared/ui": ["libs/shared/ui/src/index.ts"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "../../apps/examples/.next/types/**/*.ts",
    "../../dist/apps/examples/.next/types/**/*.ts",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts",
    "../../dist/examples/.next/types/**/*.ts",
    "../../apps/examples/dist/.next/types/**/*.ts"
  ],
  "exclude": ["node_modules", "jest.config.ts", "**/*.spec.ts", "**/*.test.ts"]
}
